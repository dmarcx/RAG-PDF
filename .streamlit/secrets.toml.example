# ============================================================
# secrets.toml.example — תבנית לקובץ הסודות
# ============================================================
# בפריסת Streamlit Cloud: העתק תוכן זה ל-Settings → Secrets
# בפיתוח מקומי:  העתק ל-.streamlit/secrets.toml ומלא ערכים אמיתיים
#
# ליצירת COOKIE_KEY:    python hash_password.py
# ליצירת password hash: python hash_password.py
# ============================================================

COOKIE_KEY = "your_random_32_char_hex_string_here"

[CREDENTIALS.usernames.john_doe]
email       = "john@example.com"
first_name  = "John"
last_name   = "Doe"
password    = "$2b$12$ExampleHashedPasswordGoesHere..."
roles       = ["user"]
failed_login_attempts = 0
logged_in   = false

[CREDENTIALS.usernames.admin_user]
email       = "admin@example.com"
first_name  = "Admin"
last_name   = "User"
password    = "$2b$12$AnotherExampleHashedPasswordHere"
roles       = ["admin"]
failed_login_attempts = 0
logged_in   = false
